<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorSubMenu</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>

       <!-- Sub Menu -->

       <div class="nav-item has-submenu px-3">
            <NavLink class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#idForSubMenu">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Menu
            </NavLink>
            <ul class="nav-submenu collapse list-unstyled" id="idForSubMenu">
                <li class="nav-subitem">
                    <NavLink class="nav-link" href="sub1">
                        <span>Sub 1</span>
                    </NavLink>
                </li>
                <li class="nav-subitem">
                    <NavLink class="nav-link" href="sub2s">
                        <span>Sub 2</span>
                    </NavLink>
                </li>
            </ul>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    // Rename collapse to sidebar-collapse to prevent collision with bootstrap's css class also named collapse
    private string? NavMenuCssClass => collapseNavMenu ? "sidebar-collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
